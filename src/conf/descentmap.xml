<screensaver name="descentmap" _label="Descent Map">

  <command arg="-root"/>
  
  <command arg="-jar descentmap.jar"/>
  
  <command arg="-class MazeScreensaver"/>
  
  <file id="jdkhome" _label="Java Home (blank=auto)" arg="-jdkhome %" />
  
  <boolean id="epic" _label="Do not check this box" arg-set="-epic"/>

	<_description>Knowing the way out is only half the battle.
	Written by cjl6</_description>

</screensaver>
